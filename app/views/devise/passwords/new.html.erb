<div class="row">
  <div class="col-sm-offset-1 col-sm-8"><h1>Forgot your password?</h1></div>
</div>
<div class="row">
  <div class="panel panel-default col-sm-offset-1 col-sm-10">
    <br />
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
    <%= f.label :email %><br />
  <div class="field input-group">
      <span class="input-group-addon" id="basic-addon1"><%= icon('envelope') %></span>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
<br />
  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-default" %>
  </div>
<% end %>
<br />
</div>
</div>
