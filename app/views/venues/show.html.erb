<% if policy(:venue).edit? %>
<div style="float: right;"><br /><%= link_to "#{icon('pencil')} Edit".html_safe, edit_venue_path(@venue) %>&nbsp;&nbsp;&nbsp;<%= link_to "#{icon('trash-o')} Delete".html_safe, venue_path(@venue), method: :delete %></div>
<% end %>
<h1><%= @venue.name %></h1>
<p>
  <strong>Address:</strong><br>
  <%= @venue.address %><br>
  <%= "#{@venue.city}, #{@venue.state}  #{@venue.zipcode}" %>
</p>
<p>
  <strong>Phone: </strong><%= @venue.phone %><br>
  <strong>E-mail: </strong><%= mail_to @venue.email, @venue.email %><br>
  <strong>Website: </strong><%= link_to @venue.website, @venue.website %><br>
</p>
<p>
  &nbsp;
</p>
<h4>Users:</h4>
<div class="panel panel-default col-sm-12">
  <%= render partial: "users/user_table", locals: {collection: @users} %>
</div>
<p>
  &nbsp;
</p>
<%= render partial: "performances/perf_table", locals: {title: "Upcoming Shows", collection: @performances_upcoming} %>
<br />
<%= render partial: "performances/perf_table", locals: {title: "Past Shows", collection: @performances_past} %>
