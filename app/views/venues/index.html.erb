<div class="row">
  <div class="col-sm-offset-1 col-sm-8"><h1>Venues</h1></div>
</div>

<div class="panel panel-default col-sm-offset-1 col-sm-10">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Phone</th>
        <th>E-Mail</th>
        <th>Website</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @venues.each do |venue| %>
      <tr><td class="col-md-2"><%= venue.name %></td><td><%= venue.city %>, <%= venue.state %></td>
        <td><%= venue.phone %></td><td><%= mail_to venue.email, venue.email %></td><td><%= link_to venue.website, venue.website %></td>
        <td><%= link_to "#{icon('eye')}".html_safe, venue_path(venue) %>&nbsp;&nbsp;&nbsp;<%= link_to "#{icon('pencil')}".html_safe, edit_venue_path(venue) %>&nbsp;&nbsp;&nbsp;<%= link_to "#{icon('trash-o')}".html_safe, venue_path(venue), method: :delete %></td></tr>
        <% end %>
        <% if @venues.empty? %>
        <tr><td colspan="5">No data to list</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
