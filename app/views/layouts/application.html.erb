<!DOCTYPE html>
<%
@path = params[:controller] %>
<html>
<head>
  <title>Entertainment Management System</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <style type="text/css">
  body {
    background-color: #CCC;
    background-image: url(<%= asset_path 'seats.jpg' %>);
    background-size: cover;
  }
  #SiteBody
  {
    max-width: 90%;
    margin: 0 auto;
    background-color: rgba(255,255,255,0.3);
  }
  </style>
</head>
<body>
  <div id="SiteBody">
<%= render 'layouts/navigation' %>

    <div class="container-fluid">
      <% if flash[:error] %>
      <p>&nbsp;</p>

      <div class="alert alert-danger" role="alert">
        <strong>ERROR:</strong> <%= flash[:error]  %>
      </div>
      <% end %>

      <% if flash[:success] %>
      <p>&nbsp;</p>

      <div class="alert alert-success" role="alert">
        <strong>SUCCESS:</strong> <%= flash[:success]  %>
      </div>
      <% end %>
      <div class="row">
        <div class="col-sm-12"><%= yield %></div></div>
      </div>
      <div class="row">
        <div class="col-sm-12">&nbsp;</div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <a href="/users/auth/google" class="btn btn-block btn-social btn-google">
            <span class="fa fa-google"></span> Sign in with Google
          </a>
          <a href="/users/auth/linkedin" class="btn btn-block btn-social btn-linkedin">
            <span class="fa fa-linkedin"></span> Sign in with LinkedIn
          </a>
        </div>
      </div>
    </body>
    </html>
