<div class="row">
  <div class="panel panel-default col-sm-offset-1 col-sm-10">
      <% if policy(:act).edit? %>
        <div style="float: right;"><%= link_to 'Edit', edit_act_path(@act) %><i class="fa fa-pencil-square fa-lg"></i></a>&nbsp;&nbsp;&nbsp;<%= link_to 'Delete', act_path(@act), method: :delete %><i class="fa fa-trash fa-lg"></i></a></div>
      <% end %>
  <h1><%= @act.name %></h1>
  <p><strong>Description:</strong><br />
  <%= @act.description %></p>
  <p>
    <strong>Location: </strong><%= @act.location %><br>
    <strong>Size: </strong><%= @act.size %><br>
    <strong>Website: </strong><%= link_to @act.website %><br>
  </p>
  <p>
    &nbsp;
  </p>
  <div class="panel panel-default col-sm-10">
    <div class="panel-heading"><strong>Upcoming Shows for <%= @act.name %></strong></div>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Venue</th>
          <th>Date</th>
          <th>Contract</th>
        </tr>
      </thead>
      <tbody>
        <% @performances.order(perf_date: :asc).where('perf_date >= ?', Date.today).each do |perf| %>
        <tr>
          <td><%= perf.name %>  <%= link_to "#{icon('arrow-circle-right')}".html_safe , performance_path(perf) %></td>
          <td><%= perf.venue.name %> <%= link_to  "#{icon('arrow-circle-right')}".html_safe, venue_path(perf.venue) %></td>
          <td><%= perf.fmatdate %></td>
          <td>
          <% if perf.try(:contract) %>
            <%= perf.contract.status %> <%= link_to  "#{icon('arrow-circle-right')}".html_safe, contract_path(perf.contract) %>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="panel panel-default col-sm-10">
    <div class="panel-heading"><strong>Past Shows</strong></div>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Venue</th>
          <th>Date</th>
          <th>Contract</th>
        </tr>
      </thead>
      <tbody>
        <% @performances.order(perf_date: :asc).where('perf_date < ?', Date.today).each do |perf| %>
        <tr>
          <td><%= perf.name %>  <%= link_to "#{icon('arrow-circle-right')}".html_safe , performance_path(perf) %></td>
          <td><%= perf.venue.name %> <%= link_to  "#{icon('arrow-circle-right')}".html_safe, venue_path(perf.venue) %></td>
          <td><%= perf.fmatdate %></td>
          <td>
          <% if perf.try(:contract) %>
          <%= perf.contract.status %> <%= link_to  "#{icon('arrow-circle-right')}".html_safe, contract_path(perf.contract) %>
          <% end %>
        </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>
