Perf Name:<%= @contract.performance.name %><br>
Performance Date: <%= @contract.performance.perf_date %><br>
Venue: <%= @contract.performance.venue.name %><br>
Act: <%= @contract.performance.act.name %><br>
Submit Date: <%= @contract.submit_date %><br>
Due Date: <%= @contract.due_date %><br>
Status: <%= @contract.status %><br>
Contract Details:<br /><%= @contract.performance.description %><br>

<h3>Documents</h3>
<% @documents.each do |d| %>
<p>
  <% if policy(:document).edit? %><%= link_to 'Edit', edit_contract_document_path(@contract, d) %><% end %> | <%= link_to d.name, contract_document_path(@contract, d) %><br><%= d.description %>
</p>
<% end %>
<p><% if policy(:document).new? %><%= link_to 'New Document', new_contract_document_path(@contract)%><% end %></p>

<h3>Approvals</h3>
<% @approvals.each do |a| %>
<p><%= a.user.name %> - <%= a.user.role %> | Date Requested: <%= a.date_requested %> | Status: <%= a.status %><% if a.status == 'pending' && current_user.try(:id) == a.user_id %> | <%= button_to "Submit Approval", approve_path(a.id) %><% end %>
  <% if a.status == 'pending' && current_user.is_admin %> | <%= button_to "Cancel Approval", cancel_approval_path(a.id) %><% end %></p><% end %>
<p><% if policy(:contract).edit? %><%= link_to 'Edit', edit_contract_path(@contract) %><% end %></p>
