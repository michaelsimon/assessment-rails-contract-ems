<%= form_for @contract do |f| %>
  <%= render partial: "shared/errors", locals: {md: @contract} %>
  <%= f.label :performance %>
  <%= f.collection_select(:performance_id, Performance.all, :id, :performance_string)  %><br>
  <%= f.label :submit_date %>
  <%= f.text_field :submit_date, class: "form-control" %><br>
  <%= f.label :due_date %>
  <%= f.text_field :due_date, class: "form-control" %><br>
  <%= f.label :status %>
  <%= f.text_field :status, class: "form-control" %><br>
  <%= f.label :details %><br>
  <%= f.text_area :details, class: "form-control" %><br>
  <%= f.submit %>
<% end %>
